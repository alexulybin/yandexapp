<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.yandex.slimsaw.yandexapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ArtistListActivity"
            android:label="@string/title_activity_list_artist" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistDetailsActivity"
            android:label="@string/title_activity_artist_details" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArtistListActivity"/>
        </activity>
    </application>

</manifest>
